<p id="notice"><%= notice %></p>

<h1>施設一覧</h1>
<%= link_to '新しい施設を追加', new_room_path %>

<%# 施設検索機能%>
<%= form_with url: rooms_path, method: :get, local: true do |form| %>
  <div>
    <%= form.label :query, "施設検索" %>
    <%= form.text_field :query %>
    <%= form.submit "検索" %>
  </div>
<% end %>


<table>
  <thead>
    <tr>
      <th>名称</th>
      <th>Description</th>
      <th>価格</th>
      <th>住所</th>
      <th>地域</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= link_to room.name, room_path(room) %></td>
        <p>地域: <%= room.region %></p>
        <p>住所: <%= room.address %></p>
        <p>価格: <%= number_to_currency(room.price) %></p>
        <td><%= room.description %></td>
        <td><%= number_to_currency(room.price) %></td>
        <td><%= room.address %></td>
        <td><%= image_tag room.image if room.image.present? %></td>
        <td><%= room.user_id %></td>
        <td><%= link_to '一覧', room %></td>
        <td><%= link_to '詳細', edit_room_path(room) %></td>
        <td><%= link_to '削除', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
